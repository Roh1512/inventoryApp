doctype html
html(lang="en" data-bs-theme="dark")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="icon" href="/images/logoicon.svg" type="image/svg+xml")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class="main-content")
      nav(class="navbar navbar-expand-lg bg-body-tertiary" id="navbar")
        div(class="container-fluid")
          a(class="navbar-brand" href="/")
            img( src="/images/logoicon.svg" alt="Logo" height="34" class="d-inline-block align-text-middle")
            | HOME
          button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse" id="navbarNav")
            ul(class="navbar-nav")
              li(class="nav-item")
                a(class="nav-link active" aria-current="page" href="/catalog/items") Items
              li(class="nav-item")
                a(class="nav-link active" aria-current="page" href="/catalog/categories") Categories
              li(class="nav-item")
                a(class="nav-link active" aria-current="page" href="/catalog/brands") Brands
              li(class="nav-item dropdown")
                a(class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Create More
                ul(class="dropdown-menu")
                  li
                    a(class="dropdown-item" href="/catalog/items/create") Create Item
                  li
                    a(class="dropdown-item" href="/catalog/categories/create") Create Category
                  li
                    a(class="dropdown-item" href="/catalog/brands/create") Create Brand
              if(!user)
                div(class="nav-btn-div")
                  li(class="nav-item")
                    a(class="nav-link active btn btn-primary login-signup" aria-current="page" href="/catalog/login") Login 
                  li(class="nav-item")
                    a(class="nav-link active btn btn-success login-signup" aria-current="page" href="/catalog/signup") Sign Up
              if user 
                div(class="nav-btn-div")
                  li(class="nav-item")
                    a(class="nav-link active profile-btn" aria-current="page" href="/catalog/user")= user.username
                  li(class="nav-item")
                    a(class="nav-link active" aria-current="page" href="/catalog/logout") Logout

      block content
    footer(class="bg-dark footer" data-bs-theme="dark")
      p(class="copyright-text") Copyright &copy; #{new Date().getFullYear()}
