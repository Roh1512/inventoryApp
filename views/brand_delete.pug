extends layout

block content
    h1= title
    h2= brand.name
    if items_in_brand.length 
        p #[strong Delete the following items before attempting to delete this brand.]
        div(style='margin-left:20px;margin-top:20px')
            h3 Items 
            dl 
                each item in items_in_brand 
                    dt
                        a(href=item.url) #{item.name}
                    dd #{item.description}
        
    else 
        p Do you really want to delete this Brand?
        form(method='POST')
            div.form-group
                div(class="mb-3 password-input-group")
                    label(for="adminpassword" class="form-label") Enter admin password: 
                    input(class="form-control form-control-lg" type="password" placeholder="Admin password to delete or update data" aria-label="password to delete brand" id="adminpassword" name="adminpassword" required )
                input#brandid.form-control(type='hidden', name='brandid', value=brand._id)
                button.btn.btn-primary(type='submit') Delete
        if errors 
            div(style='margin-left:20px;margin-top:20px')
            h3 Error
            dl 
                each error in errors 
                    p(style="color:red;") #{error}
